doctype html
html
  head
    title #{title} &bull; 
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/admin/vendor/css/bootstrap.min.css')
    link(rel='stylesheet', href='/admin/vendor/css/highlight.min.css')
    link(rel='stylesheet', href='/admin/css/style.css?_=1')
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
    link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
          .navbar-header
            a.navbar-brand(href='/admin') Admin
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li(class=section == 'users' ? 'active' : '')
                a(href='/admin/users') Users
              
            ul.nav.navbar-nav.navbar-right
              li.dropdown
                a(href='#', class='dropdown-toggle', data-toggle='dropdown')=user.email
                  span.caret
                ul.dropdown-menu(role='menu')
                  li
                    a(href='/logout') Log out

    .container
      block content

    script(src="/admin/vendor/js/jquery-2.1.3.min.js")
    script(src="/admin/vendor/js/highlight.min.js")
    script(src="/admin/vendor/js/sortable.min.js")
    script(src="/admin/vendor/js/bootstrap.js")
    script(src="/admin/js/app.js?_=2")
